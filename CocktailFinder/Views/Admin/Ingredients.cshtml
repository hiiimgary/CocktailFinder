@model IEnumerable<CocktailFinder.Models.ViewModel.Ingredient>

@{
    ViewBag.Title = "Ingredients";
    Layout = "~/Views/Admin/_adminLayout.cshtml";
}

<h2>Ingredients</h2>
<br />
@if(ViewBag.message != null)
{
    <h3>@ViewBag.message</h3><br />
}

<p>
    @Html.ActionLink("Create New", "CreateIngredient")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Property)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alcohol)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Property)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Alcohol)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditIngredient", new { id=item.Id }) |
            @Html.ActionLink("Details", "DetailsIngredient", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteIngredient", new { id=item.Id })
        </td>
    </tr>
}

</table>
