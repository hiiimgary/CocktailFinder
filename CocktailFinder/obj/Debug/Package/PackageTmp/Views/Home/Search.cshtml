
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_site.cshtml";
}

<section id="search">
    <div id="wrapper">
        <form action="" method="post">
            <div id="left">
                <div class="row">
                    <p>Type</p>
                    <div id="radio">
                        <input type="radio" id="radio-shot" name="radioType" value="Shot" checked>
                        <label for="radio-shot">Shot</label>

                        <input type="radio" id="radio-long" name="radioType" value="Long">
                        <label for="radio-long">Long</label>
                    </div>
                </div>
                <div class="row">
                    <p>Spirit</p>
                    <button>Placeholder</button>
                </div>
                <div class="row">
                    <p>Liquor</p>
                    <button>Placeholder</button>
                </div>
                <div class="row">
                    <p>Syrup</p>
                    <button>Placeholder</button>
                </div>
                <div class="row">
                    <p>Soft Drink</p>
                    <button>Placeholder</button>
                </div>
                <div class="row">
                    <p>Fruit</p>
                    <button>Placeholder</button>
                </div>
                <div class="row">
                    <p>Other</p>
                    <button>Placeholder</button>
                </div>
                <div class="row">
                    <p>Taste</p>
                    <button>Placeholder</button>
                </div>
            </div>

            <div id="right">
                <div id="search-field">
                    <p>Name</p>
                    <input type="text" name="SearchName" placeholder="Search..." />
                </div>
                <div id="details"></div>
                <input type="submit" id="submit-btn" value="Search" />
            </div>
        </form>
    </div>

</section>

